<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경색 - 메인 택배함용 강조색 (연한 파란색) -->
    <solid android:color="#E3F2FD" /> <!-- 연한 파란색 배경 -->

    <!-- 둥근 모서리 설정 -->
    <corners android:radius="8dp" />

    <!-- 테두리 설정 -->
    <stroke
        android:width="1dp"
        android:color="#6A8DFF" /> <!-- 강조 파란색 테두리 -->

    <!-- 여백 설정 -->
    <padding
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp" />
</shape>