<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.DeliveryBox" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="Theme.DeliveryBox" parent="Base.Theme.DeliveryBox" />

    <!-- themes.xml에 추가 -->
    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/rounded_background</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="SwitchCompatTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/primary_blue</item>
    </style>
</resources>
