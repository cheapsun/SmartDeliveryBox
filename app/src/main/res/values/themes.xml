<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.DeliveryBox" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="Theme.DeliveryBox" parent="Base.Theme.DeliveryBox" />

    <!-- 🔥 수정된 CustomButton 스타일 -->
    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@null</item> <!-- 테마 기본색 지움 -->
        <item name="android:background">@drawable/rounded_background</item> <!-- 직접 배경 지정 -->
        <item name="strokeColor">@android:color/transparent</item> <!-- 외곽선 없앰 -->
        <item name="strokeWidth">0dp</item> <!-- 외곽선 두께 0 -->
        <item name="rippleColor">@android:color/transparent</item> <!-- 클릭 효과 없음 -->
        <item name="android:textColor">@android:color/white</item> <!-- 글자 흰색 -->
    </style>
</resources>
