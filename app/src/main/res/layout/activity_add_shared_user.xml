<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AddSharedUserActivity">

    <!-- 제목 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shared_user_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <!-- 이메일 입력 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/shared_email_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/shared_user_hint"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_shared_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- 추가 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_add_shared_user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/shared_user_add_button"
        android:textColor="@android:color/white"
        android:backgroundTint="?attr/colorPrimary"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/shared_email_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 공유 사용자 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shared_user_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/shared_user_list"
        app:layout_constraintTop_toBottomOf="@id/btn_add_shared_user"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        tools:listitem="@layout/item_shared_user" />

</androidx.constraintlayout.widget.ConstraintLayout>
