<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- 툴바 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_home"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#F5F5F5"
        app:contentInsetStartWithNavigation="0dp"
        app:title=""
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="홈"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <!-- ➕ 추가 버튼 (우상단) -->
    <ImageButton
        android:id="@+id/btn_add_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:background="@android:color/transparent"
        android:contentDescription="택배함 추가"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

    <!-- 택배함 등록 안내 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_empty_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_home"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- 택배 아이콘 -->
            <ImageView
                android:id="@+id/iv_empty_image"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_empty_box"
                android:contentDescription="택배함 없음 아이콘"
                android:tint="#BBBBBB" />

            <!-- 안내 문구 -->
            <TextView
                android:id="@+id/tv_empty_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="택배함을 추가하고 스마트한 관리를 시작하세요!"
                android:textSize="16sp"
                android:textColor="#555555"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:textAlignment="center" />

            <!-- 택배함 추가 버튼 (중앙) -->
            <Button
                android:id="@+id/btn_add_box_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="택배함 추가"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_background"
                android:layout_marginTop="20dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 택배함 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_boxes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/card_empty_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
